---
import { isCollectionEmpty } from "@/content.config";
import type { CollectionName } from "@/types/Collection";

export const title = "Blog";
export const collection: CollectionName = "blog";

const isEmpty = await isCollectionEmpty(collection);
if (isEmpty) {
  return Astro.rewrite("/404");
} else return Astro.rewrite(`/${collection}/1`);
